{
  "plugins": {
    "sample": {
      "module": "path:plugin/sample"
    },
    "preDriver": {
      "module": "path:plugin/sample",
      "priority": 99,
      "arguments": ["preDriver"]
    },
    "postDriver": {
      "module": "path:plugin/sample",
      "priority": 101,
      "arguments": ["postDriver"]
    }
  },
  "driver": {
    "builders": {
      "withCapabilities": [
        {
          "browserName": "zome",
          "setChromeOptions": {
            "args": [
              "--headless",
              "--window-size=1200,800",
              "--disable-dev-shm-usage"
            ]
          }

        }
      ]
    }
  },
  "data": {
    "baseUrl": "https://www.google.com",
    "passThroughFromJson": true
  }
}
